<UserControl x:Class="kino.Pages.Afisha.Items.Item"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kino.Pages.Afisha.Items"
             mc:Ignorable="d">
    <Grid Margin="10" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100px"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Width="80" Height="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,34,0,0" Source="/Images/ic-afishaa.png"/>

        <Label Content="Кинотеатр: " Grid.Column="1" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="kinoteatrs" Height="25" Grid.Column="1" Margin="10,36,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="Наименование: " Grid.Column="1" Margin="10,66,10,0" Height="26" VerticalAlignment="Top"/>
        <TextBox x:Name="name" Height="25" Grid.Column="1" Margin="10,92,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="Дата: " Grid.Column="2" VerticalAlignment="Top" Margin="10,10,10,0"/>
        <DatePicker x:Name="date" Height="25" Grid.Column="2" Margin="10,36,146,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="187" IsEnabled="False"/>
        <TextBox x:Name="price" Height="25" Grid.Column="2" Margin="10,92,10,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Label Content="Стоимость: " Grid.Column="2" VerticalAlignment="Top" Margin="10,66,10,0"/>
        <TextBox x:Name="time" Height="25" Grid.Column="2" Margin="197,36,10,0" VerticalAlignment="Top"/>
        <Button Click="EditRecord" Content="Изменить" Margin="0,97,0,0" HorizontalAlignment="Center" Width="80" Background="#FF73E618" Height="25" VerticalAlignment="Top"/>
        <Button Click="DeleteRecord" Content="Удалить" Height="25"  Margin="0,139,0,0" HorizontalAlignment="Center" Width="80" Background="#FFE68918" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
