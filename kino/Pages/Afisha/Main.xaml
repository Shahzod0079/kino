<Page x:Class="kino.Pages.Afisha.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kino.Pages.Afisha"
      xmlns:items="clr-namespace:kino.Pages.Afisha.Items"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Background="#F0F0F0" Padding="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Название:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="5" Height="25" Width="120"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Кинотеатр:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox x:Name="cmbKinoteatr" Grid.Row="0" Grid.Column="3" Margin="5,5,37,5" Height="25" Grid.ColumnSpan="2"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Дата от:" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDateFrom" Grid.Row="1" Margin="58,5,17,5" Height="25" Grid.ColumnSpan="2"/>

                <Label Grid.Row="1" Grid.Column="1" Content="до:" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="108,0,61,0"/>
                <DatePicker x:Name="dpDateTo" Grid.Row="1" Grid.Column="2" Margin="19,5,109,5" Height="25" Grid.ColumnSpan="2"/>

                <Label Grid.Row="1" Grid.Column="3" Content="Цена от:" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="72,0,48,0"/>
                <TextBox x:Name="txtPriceFrom" Grid.Row="1" Grid.Column="3" Margin="128,5,76,5" Height="25" Width="80" Grid.ColumnSpan="3"/>

                <Label Grid.Row="1" Grid.Column="5" Content="до:" VerticalAlignment="Center" Margin="44,0,8,0"/>
                <TextBox x:Name="txtPriceTo" Grid.Row="1" Grid.Column="5" Margin="66,5,40,5" Height="25" Width="80" Grid.ColumnSpan="3"/>

                <Button x:Name="btnApply" Grid.Column="8" Content="Применить" 
                        Click="ApplyFilter" Height="25" Width="80" Background="#FF73E618" Margin="61,5,-51,5" Grid.Row="1"/>
                <Button x:Name="btnClear" Grid.Column="7" Content="Сброс" 
                        Click="ClearFilter" Height="25" Width="60" Background="#FFE68918" Margin="65,5,45,5" RenderTransformOrigin="0.546,0.608" Grid.Row="1" Grid.ColumnSpan="2"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2" Margin="5">
            <StackPanel x:Name="parent">

            </StackPanel>
        </ScrollViewer>

        <!-- Кнопка Добавить -->
        <Button Grid.Row="3" x:Name="btnAdd" Content="Добавить" 
                Click="AddRecord" Height="30" Width="100" 
                Background="#FF73E618" Margin="5" HorizontalAlignment="Right"/>
    </Grid>
</Page>