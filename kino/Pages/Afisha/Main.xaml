<Page x:Class="kino.Pages.Afisha.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kino.Pages.Afisha"
      xmlns:items="clr-namespace:kino.Pages.Afisha.Items"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F0F0F0" Padding="10" Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Название:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="5" Height="25"/>

                <Label Grid.Row="0" Grid.Column="2" Content="Кинотеатр:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <ComboBox x:Name="cmbKinoteatr" Grid.Row="0" Grid.Column="3" Margin="5" Height="25" Grid.ColumnSpan="2"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Дата от:" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDateFrom" Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>

                <Label Grid.Row="1" Grid.Column="2" Content="до:" VerticalAlignment="Center"/>
                <DatePicker x:Name="dpDateTo" Grid.Row="1" Grid.Column="3" Margin="5" Height="25"/>

                <Label Grid.Row="1" Grid.Column="4" Content="Цена от:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPriceFrom" Grid.Row="1" Grid.Column="5" Margin="5" Height="25"/>

                <Label Grid.Row="1" Grid.Column="6" Content="до:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPriceTo" Grid.Row="1" Grid.Column="7" Margin="5" Height="25"/>

                <Button x:Name="btnApply" Grid.Row="1" Grid.Column="8" Content="Применить" 
                        Click="ApplyFilter" Height="25" Width="80" Background="#FF73E618" Margin="5"/>
                <Button x:Name="btnClear" Grid.Row="1" Grid.Column="9" Content="Сброс" 
                        Click="ClearFilter" Height="25" Width="60" Background="#FFE68918" Margin="5"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#E0E0E0" Padding="5" Margin="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="Сортировать по:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbSort" Width="120" Margin="5" Height="25" SelectedIndex="0">
                    <ComboBoxItem Content="Названию"/>
                    <ComboBoxItem Content="Дате"/>
                    <ComboBoxItem Content="Цене (возрастание)"/>
                    <ComboBoxItem Content="Цене (убывание)"/>
                </ComboBox>
                <Button x:Name="btnSort" Content="Сортировать" Click="ApplySort" 
                        Height="25" Width="100" Background="#FF3399FF" Margin="5"/>
            </StackPanel>
        </Border>
        <ScrollViewer Grid.Row="2" Margin="5">
            <StackPanel x:Name="parent"/>
        </ScrollViewer>
        <Button Grid.Row="3" x:Name="btnAdd" Content="Добавить" 
                Click="AddRecord" Height="30" Width="100" 
                Background="#FF73E618" Margin="5" HorizontalAlignment="Right"/>
    </Grid>
</Page>