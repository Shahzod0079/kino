<Page x:Class="kino.Pages.Kinoteatr.Filter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kino.Pages.Kinoteatr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Filter" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название -->
        <Label Grid.Row="0" Grid.Column="0" Content="Название:" Margin="5"/>
        <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="5" Height="25" Grid.ColumnSpan="3"/>

        <!-- Количество залов -->
        <Label Grid.Row="1" Grid.Column="0" Content="Залы от:" Margin="5"/>
        <TextBox x:Name="txtMinZal" Grid.Row="1" Grid.Column="1" Margin="5" Height="25"/>
        <Label Grid.Row="1" Grid.Column="2" Content="до:" Margin="5"/>
        <TextBox x:Name="txtMaxZal" Grid.Row="1" Grid.Column="3" Margin="5" Height="25"/>

        <!-- Количество мест -->
        <Label Grid.Row="2" Grid.Column="0" Content="Места от:" Margin="5"/>
        <TextBox x:Name="txtMinCount" Grid.Row="2" Grid.Column="1" Margin="5" Height="25"/>
        <Label Grid.Row="2" Grid.Column="2" Content="до:" Margin="5"/>
        <TextBox x:Name="txtMaxCount" Grid.Row="2" Grid.Column="3" Margin="5" Height="25"/>

        <!-- Кнопки -->
        <Button x:Name="btnApply" Grid.Row="3" Grid.Column="1" Content="Применить" 
                Click="ApplyFilter" Margin="5" Height="30" Background="#FF73E618"/>
        <Button x:Name="btnClear" Grid.Row="3" Grid.Column="2" Content="Сбросить" 
                Click="ClearFilter" Margin="5" Height="30" Background="#FFE68918"/>
    </Grid>
</Page>